<%= form_with(model: offer) do |form| %>
  <% if offer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(offer.errors.count, "error") %> prohibited this offer from being saved:</h2>

      <ul>
        <% offer.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :unit %>
    <%= form.collection_select :unit_id, Unit.all, :id, :name, prompt: true %>
  </div>

  <div class="field">
    <%= form.label :good %>
    <%= form.collection_select :good_id, Good.all, :id, :name, prompt: true %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.text_field :price %>
    <%= @offer.price_currency %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
